<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/background">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dashboard"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dashboard_subtitle"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:alpha="0.7"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Content Area with Loading Overlay -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/background"
        android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <!-- Weekly Insights Cards (2 horizontal boxes) -->
        <LinearLayout
            android:id="@+id/weeklyInsightsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Card 1: Receipts Uploaded This Week -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardReceiptsWeekly"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="?attr/colorSurface">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="14dp">

                    <ImageView
                        android:id="@+id/iconReceiptsWeekly"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_receipt_icon"
                        app:tint="?attr/colorPrimary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvReceiptsWeeklyTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:text="@string/receipts_this_week"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/iconReceiptsWeekly"
                        app:layout_constraintStart_toEndOf="@id/iconReceiptsWeekly"
                        app:layout_constraintTop_toTopOf="@id/iconReceiptsWeekly" />

                    <TextView
                        android:id="@+id/tvReceiptsWeeklyCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="0"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iconReceiptsWeekly" />

                    <TextView
                        android:id="@+id/tvReceiptsWeeklySubtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="@string/receipts_uploaded"
                        android:textColor="?attr/colorOnSurface"
                        android:alpha="0.6"
                        android:textSize="12sp"
                        app:layout_constraintBaseline_toBaselineOf="@id/tvReceiptsWeeklyCount"
                        app:layout_constraintStart_toEndOf="@id/tvReceiptsWeeklyCount" />

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/receiptsWeeklyChart"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/tvReceiptsWeeklyCount" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card 2: Weekly Spending Summary -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardWeeklySpending"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="?attr/colorSurface">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="14dp">

                    <ImageView
                        android:id="@+id/iconWeeklySpending"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_expense"
                        app:tint="?attr/colorPrimary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvWeeklySpendingTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:text="@string/weekly_spending"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/iconWeeklySpending"
                        app:layout_constraintStart_toEndOf="@id/iconWeeklySpending"
                        app:layout_constraintTop_toTopOf="@id/iconWeeklySpending" />

                    <TextView
                        android:id="@+id/tvWeeklySpendingAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="$0.00"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iconWeeklySpending" />

                    <TextView
                        android:id="@+id/tvWeeklySpendingComparison"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="vs last week"
                        android:textColor="?attr/colorOnSurface"
                        android:alpha="0.6"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvWeeklySpendingAmount" />

                    <LinearLayout
                        android:id="@+id/weeklySpendingBreakdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        app:layout_constraintTop_toBottomOf="@id/tvWeeklySpendingComparison">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvReceiptsAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$0.00"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/from_receipts"
                                android:textColor="?attr/colorOnSurface"
                        android:alpha="0.6"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvManualAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$0.00"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/manual_entries"
                                android:textColor="?attr/colorOnSurface"
                        android:alpha="0.6"
                                android:textSize="11sp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Tab Selector -->
        <LinearLayout
            android:id="@+id/tabScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/bg_tab_container"
            android:orientation="horizontal"
            android:weightSum="4"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@id/weeklyInsightsContainer">

            <TextView
                android:id="@+id/tabWeek"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:paddingVertical="5dp"
                android:text="@string/week"
                android:textColor="@color/tab_unselected_text" />

            <TextView
                android:id="@+id/tabMonth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_tab_selected"
                android:elevation="2dp"
                android:gravity="center"
                android:paddingVertical="5dp"
                android:text="@string/month"
                android:textColor="@color/tab_selected_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tabYear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingVertical="5dp"
                android:text="@string/year"
                android:textColor="@color/tab_unselected_text" />

            <TextView
                android:id="@+id/tabRange"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingVertical="5dp"
                android:text="@string/range"
                android:textColor="@color/tab_unselected_text" />
        </LinearLayout>

        <!-- Date Navigator Container -->
        <FrameLayout
            android:id="@+id/dateNavContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/tabScroll">

            <!-- 1. Standard Navigation (Arrows + Text) -->
            <LinearLayout
                android:id="@+id/navStandard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnPrev"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/circle_blue_bg"
                    android:padding="2dp"
                    android:src="@drawable/ic_arrow_left"
                    app:tint="?attr/colorOnPrimary" />

                <TextView
                    android:id="@+id/tvDateDisplay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Nov, 2025"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/btnNext"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/circle_blue_bg"
                    android:padding="2dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="?attr/colorOnPrimary" />
            </LinearLayout>

            <!-- 2. Range Picker (Two Dates) -->
            <LinearLayout
                android:id="@+id/navRange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvRangeStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025/08/01"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:drawableEnd="@drawable/ic_chevron_down"
                    android:drawableTint="?attr/colorOnSurface"
                    android:drawableTintMode="src_atop"
                    android:drawablePadding="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="~"
                    android:textColor="#888888"
                    android:layout_marginHorizontal="8dp"/>

                <TextView
                    android:id="@+id/tvRangeEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025/11/30"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:drawableEnd="@drawable/ic_chevron_down"
                    android:drawableTint="?attr/colorOnSurface"
                    android:drawableTintMode="src_atop"
                    android:drawablePadding="4dp"/>
            </LinearLayout>

        </FrameLayout>

        <!-- Card 1: Expense Statistics (Bar/Candle Chart) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardStatistics"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:layout_constraintTop_toBottomOf="@id/dateNavContainer">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/iconStat"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_chart_bar"
                    app:tint="?attr/colorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvStatTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/expense_statistics"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/iconStat"
                    app:layout_constraintStart_toEndOf="@id/iconStat"
                    app:layout_constraintTop_toTopOf="@id/iconStat" />

                <ImageView
                    android:id="@+id/btnSwitchChart"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chart_line"
                    app:tint="?attr/colorOnSurface"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Chart Container with fixed height -->
                <FrameLayout
                    android:id="@+id/chartContainer"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvStatTitle">

                    <!-- Bar Chart -->
                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/barChart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <!-- Line Chart -->
                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineChart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />

                    <!-- Empty State for Statistics - Centered -->
                    <TextView
                        android:id="@+id/tvEmptyStateStats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no_data_available"
                        android:textColor="?attr/colorOnSurface"
                        android:alpha="0.6"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_gravity="center" />
                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card 2: Expense Categories  -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:layout_constraintTop_toBottomOf="@id/cardStatistics">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Header -->
                <ImageView
                    android:id="@+id/iconPie"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_expense"
                    app:tint="?attr/colorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/expenses_by_category"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/iconPie"
                    app:layout_constraintStart_toEndOf="@id/iconPie"
                    app:layout_constraintTop_toTopOf="@id/iconPie" />

                <!-- Pie Chart Container with fixed height -->
                <FrameLayout
                    android:id="@+id/pieChartContainer"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iconPie">

                    <!-- Pie Chart -->
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <!-- Empty State - Centered -->
                    <TextView
                        android:id="@+id/tvEmptyState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no_data_available"
                        android:textColor="?attr/colorOnSurface"
                        android:alpha="0.6"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_gravity="center" />
                </FrameLayout>

                <!-- Category List -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCategories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintTop_toBottomOf="@id/pieChartContainer"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:itemCount="4"
                    tools:listitem="@layout/item_dashboard_category" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Loading Indicator Overlay -->
    <LinearLayout
        android:id="@+id/loadingProgressLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="?attr/colorSurface"
        android:alpha="0.95"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="?attr/colorPrimary"
            android:foregroundTint="?attr/colorPrimary"
            style="?android:attr/progressBarStyleLarge" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading_dashboard"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:alpha="0.7"
            android:layout_marginTop="16dp" />

    </LinearLayout>

    </FrameLayout>
</LinearLayout>