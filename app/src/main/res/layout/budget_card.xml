<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/budgetCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="24dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="?attr/colorPrimaryContainer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvBudgetTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/monthly_budget"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/tvBudgetMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text=""
                    android:textSize="13sp"
                    android:textColor="?attr/colorOnSurface"
                    android:alpha="0.7" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditBudget"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_edit"
                app:iconTint="?attr/colorPrimary" />

        </LinearLayout>

        <!-- Budget Amount -->
        <TextView
            android:id="@+id/tvBudgetAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text=""
            android:textSize="42sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:letterSpacing="0.02" />

        <!-- Progress Bar Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp">

            <ProgressBar
                android:id="@+id/progressBudget"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:progressDrawable="@drawable/progress_budget_safe"
                android:progress="0"
                android:max="100" />

            <!-- Budget Status Message -->
            <TextView
                android:id="@+id/tvBudgetStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text=""
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:gravity="center"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Spent and Remaining Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <!-- Spent -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/spent"
                    android:textSize="13sp"
                    android:textColor="?attr/colorOnSurface"
                    />

                <TextView
                    android:id="@+id/tvSpentAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text=""
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/error" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="16dp"
                android:background="?attr/colorOnSurface"
                android:alpha="0.12" />

            <!-- Remaining -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/remaining"
                    android:textSize="13sp"
                    android:textColor="?attr/colorOnSurface"
                    />

                <TextView
                    android:id="@+id/tvRemainingAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text=""
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary" />

            </LinearLayout>

        </LinearLayout>

        <!-- No Budget Set Message -->
        <TextView
            android:id="@+id/tvNoBudget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/set_a_budget_to_start_tracking_your_expenses"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:alpha="0.6"
            android:gravity="center"
            android:visibility="gone" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
