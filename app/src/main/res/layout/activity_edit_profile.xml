<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".features.edit_profile.EditProfileActivity">

    <include
        layout="@layout/toolbar_layout"
        android:id="@+id/editProfileToolbar"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profileImageView"
                    android:contentDescription="@string/profile_image_content_description"
                    android:scaleType="centerCrop"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    app:shapeAppearanceOverlay="@style/CircleImageView"
                    android:backgroundTint="@android:color/transparent"
                    android:layout_gravity="center_horizontal"
                    />

                <ImageButton
                    android:id="@+id/editProfileImageButton"
                    android:contentDescription="@string/edit_profile"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="bottom|end"
                    android:src="@drawable/ic_edit_profile"
                    android:scaleType="centerInside"
                    android:background="@drawable/circle_image_button"
                    app:tint="@color/surface"
                    android:padding="8dp"
                    />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="17.5dp"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:text="@string/full_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextMedium.Bold"
                        />
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/fullNameLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxStrokeWidth="1sp"
                        android:layout_marginTop="2.5dp"
                        app:hintEnabled="false"
                        >
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/userFullName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7.5sp"
                            android:hint="@string/full_name"
                            android:padding="12sp"
                            android:inputType="text"
                            />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:text="@string/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextMedium.Bold"
                        />
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/emailLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        app:boxBackgroundColor="@color/input_disabled_bg"
                        app:hintEnabled="false"
                        android:layout_marginTop="2.5dp"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/input_disabled_text"
                            android:hint="@string/email"
                            android:padding="12dp"
                            android:enabled="false"/>

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:text="@string/bio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextMedium.Bold"
                        />
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/aboutMeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false"
                        android:layout_marginTop="2.5dp"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/aboutMe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7.5sp"
                            android:hint="@string/bio"
                            android:padding="12sp"
                            android:inputType="text"
                            />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:text="@string/phone_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextMedium.Bold"
                        />
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/phoneNumberLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false"
                        android:layout_marginTop="2.5dp"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/phoneNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7.5sp"
                            android:hint="@string/phone_number"
                            android:padding="12sp"
                            android:inputType="phone"
                            />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:text="@string/city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextMedium.Bold"
                        />
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/cityLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false"
                        android:layout_marginTop="2.5dp"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7.5sp"
                            android:hint="@string/city"
                            android:padding="12sp"
                            android:inputType="text"
                            />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/saveChanges"
                    style="@style/Button"
                    android:text="@string/save_changes"
                    android:textColor="@color/button_primary_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>